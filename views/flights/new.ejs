<%- include('../partials/header') %>
    <form action="/flights" method="POST">
        <label for="airline">Airline</label>
        <select name="airline">
            <option value="American">American</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
        </select>
        <label for="airport">Airport</label>
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
        <label for="flightNo">Flight Number</label>
        <input type="number" name="flightNo">
        <label for="departs">Departure</label>
        <input type="datetime-local" name="departs" value="<%= departsDate %>">
        <div style="margin-top:20px"><button type="submit">Save Flight</button></div>
    </form>
<%- include('../partials/footer') %>